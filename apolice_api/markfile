# Configura o caminho da aplicação para o PYTHONPATH
export PYTHONPATH=.

# Comando padrão para rodar os testes da API
test:
	pytest app/tests

# Teste específico
test-api:
	pytest app/tests/test_api.py

# Limpa arquivos .pyc e cache
clean:
	find . -type d -name "__pycache__" -exec rm -r {} +;
	find . -type f -name "*.pyc" -delete

# Formata o código com black
format:
	black app/

# Instala dependências (útil em ambiente local)
install:
	pip install -r requirements.txt
